{
  "name": "meta-system",
  "version": "0.3.0-RC4",
  "description": "A system to be any system",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "build": "npm ci && npx tsc -p tsconfig.build.json",
    "test": "mocha --exit --sort",
    "lint": "eslint --max-warnings 0 './*{(test),(src)}/**/*.{ts,js}'"
  },
  "bin": {
    "meta-system": "./dist/src/bin/index.js"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "timeout": 0,
    "spec": "./test/**/*.ts",
    "recursive": true
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "cache": true,
    "check-coverage": true,
    "exclude-after-remap": false,
    "per-file": false,
    "lines": 40,
    "statements": 40,
    "functions": 60,
    "branches": 60,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".eslintrc.js",
      "sequelize-models/",
      "migrations/",
      "seeders/"
    ],
    "extension": [
      ".ts"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "report-dir": "./.nyc_output"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapikit/meta-system.git"
  },
  "keywords": [
    "configuration",
    "low-code",
    "service",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mapikit/meta-system/issues"
  },
  "dependencies": {
    "@meta-system/meta-function-helper": "^0.3.4",
    "@meta-system/meta-protocol-helper": "^0.3.3",
    "@meta-system/object-definition": "^1.1.4",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "decimal.js": "^10.3.1",
    "glob": "^7.2.0",
    "just-clone": "^3.2.1",
    "mersenne-twister": "^1.1.0",
    "strip-ansi": "^6.0.1"
  },
  "homepage": "https://github.com/mapikit/meta-system#readme",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/faker": "^4.1.11",
    "@types/glob": "^7.2.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mersenne-twister": "^1.1.2",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^12.20.37",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^3.4.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios": "^0.21.4",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "faker": "^4.1.0",
    "mocha": "^9.1.3",
    "mongodb-memory-server": "^8.0.4",
    "nyc": "^15.1.0",
    "sinon": "^8.1.1",
    "ts-node": "^8.8.2",
    "typescript": "^4.4.4"
  }
}
