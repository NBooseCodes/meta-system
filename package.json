{
  "name": "meta-system",
  "version": "0.1.2",
  "description": "A system to be any system",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm ci && npx tsc",
    "test": "mocha --exit --sort",
    "lint": "eslint --max-warnings 0 './*{(test),(src)}/**/*.{ts,js}'"
  },
  "bin": {
    "meta-system": "./dist/bin/index.js"
  },
  "_moduleAliases": {
    "@api": "./dist"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "timeout": 0,
    "spec": "./test/**/*.ts",
    "recursive": true
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "cache": true,
    "check-coverage": true,
    "exclude-after-remap": false,
    "per-file": false,
    "lines": 40,
    "statements": 40,
    "functions": 60,
    "branches": 60,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".eslintrc.js",
      "sequelize-models/",
      "migrations/",
      "seeders/"
    ],
    "extension": [
      ".ts"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "report-dir": "./.nyc_output"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapikit/meta-system.git"
  },
  "keywords": [
    "configuration",
    "low-code",
    "service",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mapikit/meta-system/issues"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "decimal.js": "^10.3.1",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "just-clone": "^3.2.1",
    "live-plugin-manager": "^0.15.1",
    "mersenne-twister": "^1.1.0",
    "meta-function-helper": "^0.1.0",
    "module-alias": "^2.2.2",
    "mongodb": "^3.5.6",
    "reflect-metadata": "^0.1.13"
  },
  "homepage": "https://github.com/mapikit/meta-system#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.9",
    "@types/faker": "^4.1.11",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mersenne-twister": "^1.1.2",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.5.6",
    "@types/node": "^12.12.35",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^3.4.8",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "axios": "^0.21.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "faker": "^4.1.0",
    "mocha": "^7.1.1",
    "mongodb-memory-server": "^6.9.6",
    "nyc": "^14.1.1",
    "sinon": "^8.1.1",
    "ts-node": "^8.8.2",
    "typescript": "^4.2.3"
  }
}
